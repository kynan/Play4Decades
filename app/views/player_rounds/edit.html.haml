- title "Edit Player Round"

= @game.current_year.to_s
= render 'form'

= @game.next_decade.to_s

%p Emissions
= @team.global_emissions(@game.current_round-1)

%p Warming 
= @team.temperature(@game.current_round-1)

%p Baseline Damage 
= @player.baseline_damage(@game.current_round-1)

%p Residual Damage 
= @player.residual_damage(@game.current_round-1)

%p Income 
= @player.gross_national_income(@game.current_round-1)

%p
  = link_to "Show", player_player_round_path(@player_round.player, @player_round)
  |
  = link_to "View All", player_player_rounds_path(@player_round.player)
